{
    "manifest_version": 2,
    "name": "Px Downloader",
    "version": "2.3.0",
    "description": "Download Pixiv images",
    "author": "rndomhack",
    "icons": {
        "16": "icon/icon16.png",
        "48": "icon/icon48.png",
        "128": "icon/icon128.png"
    },
    "browser_action": {
        "default_icon": {
            "19": "icon/icon19.png",
            "38": "icon/icon38.png"
        },
        "default_title": "Px Downloader"
    },
    "background": {
        "scripts": ["lib/namespace.js", "lib/extension-util.js", "lib/px-background.js", "js/background.js"],
        "persistent": false
    },
    "content_scripts": [
        {
            "matches": ["*://*.pixiv.net/*"],
            "js": ["lib/namespace.js", "lib/extension-util.js", "lib/jszip.min.js", "lib/gif.js", "lib/apng.js", "lib/webp.js", "lib/px-content.js", "js/content.js"],
            "run_at": "document_start"
        }
    ],
    "options_ui": {
        "page": "html/options.html",
        "chrome_style": true
    },
    "permissions": [
        "storage",
        "downloads",
        "*://*.pixiv.net/",
        "*://*.pximg.net/"
    ]
}
